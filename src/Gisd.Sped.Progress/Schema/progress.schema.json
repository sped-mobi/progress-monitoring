{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "year": {
      "type": "string",
      "enum": [ "SY 2019-2020", "SY 2020-2021" ]
    },
    "campus": {
      "type": "string"
    },
    "students": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Student"
      }
    }
  },
  "required": [
    "campus",
    "students",
    "year"
  ],
  "definitions": {
    "Student": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "gender": {
          "type": "string",
          "enum": [ "F", "M" ]
        },
        "grade": {
          "type": "string"
        },
        "districtId": {
          "type": "string"
        },
        "dob": {
          "type": "string",
          "format": "date"
        },
        "goals": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Goal"
          }
        }
      },
      "required": [
        "dob",
        "gender",
        "grade",
        "id",
        "name"
      ],
      "title": "Student"
    },

    "Goal": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "number": {
          "type": "integer"
        },
        "focus": {
          "type": "string"
        },
        "timeFrame": {
          "type": "string"
        },
        "conditions": {
          "type": "string"
        },
        "behavior": {
          "type": "string"
        },
        "criteria": {
          "type": "string"
        },
        "objectives": {
          "type": "array",
          "minItems": 2,
          "items": {
            "$ref": "#/definitions/Objective"
          }
        }
      },
      "required": [
        "timeFrame",
        "conditions",
        "behavior",
        "focus",
        "number",
        "objectives"
      ],
      "title": "Goal"
    },
    "Objective": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "code": {
          "type": "string"
        },
        "timeFrame": {
          "type": "string"
        },
        "conditions": {
          "type": "string"
        },

        "behavior": {
          "type": "string"
        },
        "criteria": {
          "type": "string"
        }
      },
      "required": [
        "code",
        "timeFrame",
        "conditions",
        "behavior",
        "criteria"
      ],
      "title": "Objective"
    }
  }
}
